<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="94dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/catIcon"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginTop="11.5dp"
        android:background="@drawable/item_category_background"
        android:elevation="11.5dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat_books"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/catTitle"
        style="@style/font_style_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/text_sample"
        android:textColor="@color/main_color_dark"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/catIcon"
        app:layout_constraintStart_toStartOf="@+id/catIcon"
        app:layout_constraintTop_toBottomOf="@+id/catIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>